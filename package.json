{
  "name": "sonarqube-cli",
  "type": "module",
  "version": "0.4.0",
  "description": "SonarQube CLI",
  "bin": {
    "sonar": "./dist/index.js"
  },
  "scripts": {
    "build": "npm run validate && tsc",
    "build:binary": "bun build src/index.ts --compile --outfile dist/sonarqube-cli",
    "dev": "bun run src/index.ts",
    "test": "bun test ./tests/unit/",
    "test:integration": "bun test ./tests/integration/",
    "test:scripts": "bun test tests/build-scripts/",
    "test:all": "bun test ./tests/",
    "test:coverage": "bun test ./tests/ --coverage --coverage-reporter=lcov",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "validate": "npm run spec:validate && npm run commands:validate",
    "spec:validate": "node build-scripts/validate-spec.js",
    "commands:validate": "node build-scripts/validate-commands.js",
    "gen": "node build-scripts/generate.js",
    "gen:docs": "node build-scripts/generate-docs.js",
    "gen:command": "plop command",
    "gen:all": "plop all-commands",
    "gen:sync": "plop sync-index",
    "fetch:signatures": "bun build-scripts/fetch-signatures.js"
  },
  "externalBinaries": {
    "sonar-secrets": { 
      "version": "2.41.0.10709",
      "binaryPath": "CommercialDistribution/sonar-secrets",
      "platforms": [
        { "os": "linux",   "arch": "x86-64" },
        { "os": "linux",   "arch": "arm64"  },
        { "os": "macos",   "arch": "arm64"  },
        { "os": "windows", "arch": "x86-64" }
      ]
    }
  },
  "dependencies": {
    "@clack/core": "^1.0.1",
    "@toon-format/toon": "^2.1.0",
    "commander": "^12.1.0",
    "keytar": "^7.9.0",
    "openpgp": "^5.11.2",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@sonar/scan": "^4.3.0",
    "@types/bun": "^1.3.9",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "ajv": "^8.18.0",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-headers": "^1.3.4",
    "husky": "9.1.7",
    "js-yaml": "^4.1.1",
    "plop": "^4.0.5",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
